<%= render 'shared/title' ,title:'Create a new category' %>
<%= render('shared/error', ar:@category) %>

<div class="well">
  <%= form_for @category do |f| %>
    <div class='control-group'>
      <%= f.label 'Category name' %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit "Create category", class:"btn btn-primary" %>
  <% end %>
</div>
