<% header = link_to('All Post', root_path) + " &raquo; #{@category.name}".html_safe %>
<%= render 'shared/title', title: header %>

<% if @category.posts.any?  %>
  <% @category.posts.each do |post| %>
    <%= render 'posts/post', post:post %>
  <% end %>
<% else %>
  This no post under <span class='label label-info'><%= @category.name %></span> Category.
<% end %>
